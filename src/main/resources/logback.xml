<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" scanPeriod="2 seconds">
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>
    <conversionRule conversionWord="traceID" converterClass="kamon.instrumentation.logback.tools.TraceIDConverter" />

    <logger name="order-service" level="${LOGLEVEL_APP:-DEBUG}"/>

    <root level="${LOGLEVEL_ROOT:-INFO}">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <target>System.out</target>
            <encoder>
                <pattern>%d{ISO8601} [%traceID] %-5level [%logger{0}] [%thread] - %msg%n</pattern>
            </encoder>
        </appender>
    </root>
</configuration>
